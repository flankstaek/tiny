{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Connect to freenode",
            "cargo": {
                "args": [
                    "run",
                ]
            },
            "program": "${cargo:program}",
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'tiny'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=tiny",
                    "--package=tiny"
                ],
                "filter": {
                    "name": "tiny",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach to executable 'tiny'",
            "program": "${workspaceFolder}/target/debug/tiny",
            "pid": "${command:pickProcess}",
            "stopOnEntry": true,
        }
    ]
}